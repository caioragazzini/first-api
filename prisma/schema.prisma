generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id       Int    @id @default(autoincrement()) @db.UnsignedInt
  name     String @db.VarChar(455)
  email    String @db.VarChar(45)
  password String @db.VarChar(45)

  @@map("users")
}

model Client {
  id       Int      @id @unique(map: "id_UNIQUE") @default(autoincrement())
  name     String?  @db.VarChar(45)
  email    String?  @db.VarChar(45)
  password String?  @db.VarChar(45)

  pedidos  Pedido[] @relation("ClientPedidos") // Um cliente pode ter v√°rios pedidos

  @@map("clientes")
}

model Pedido {
  id         Int       @id @default(autoincrement())
  clienteId  Int
  dataPedido DateTime? @db.DateTime(0)
  status     String?   @db.VarChar(45)

  cliente    Client    @relation("ClientPedidos", fields: [clienteId], references: [id]) // Relacionamento com Client

  @@map("pedidos")
}